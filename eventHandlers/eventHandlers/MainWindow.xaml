<Window x:Class="eventHandlers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eventHandlers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Ellipse x:Name="c1" HorizontalAlignment="Left" Height="248" Margin="34,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="248" Fill="Red" MouseEnter="MouseEnter" MouseLeave="MouseLeave"/>
        <Ellipse x:Name="c2" HorizontalAlignment="Left" Height="124" Margin="380,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="124" Fill="Red" MouseEnter="MouseEnter2" MouseLeave="MouseLeave2"/>
        <Ellipse x:Name="c3" HorizontalAlignment="Left" Height="200" Margin="508,205,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="Red" MouseEnter="MouseEnter3" MouseLeave="MouseLeave3"/>
        <Button x:Name="button" Content="Exit" HorizontalAlignment="Left" Height="44" Margin="259,314,0,0" VerticalAlignment="Top" Width="158" GotMouseCapture="btnOKClicked"/>
        <TextBox x:Name="txtBoxMain" HorizontalAlignment="Left" Height="36" Margin="277,217,0,0" Text="Enter: " TextWrapping="Wrap" VerticalAlignment="Top" Width="226" FontSize="24" KeyDown="KeyCount"/>

    </Grid>
</Window>
